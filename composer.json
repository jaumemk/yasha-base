{
    "name": "yasha/yasha-base",
    "type": "project",
    "description": "The Yasha's base speedup development stack",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/yasha/yasha-base-backend",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^7.1.3",
        "barryvdh/laravel-elfinder": "^0.4.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0",
        "spatie/laravel-translation-loader": "^2.3",
        "yasha/yasha-base-backend": "dev-develop"
    },
    "require-dev": {
        "backpack/generators": "^1.2",
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "itsgoingd/clockwork": "^4.0",
        "laracasts/generators": "dev-master",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan env:set DB_DATABASE $(echo ${PWD##*/} | tr - _)_test",
            "@php artisan db:create $(echo ${PWD##*/} | tr - _)_test",
            "@php artisan migrate --seed",
            "@php artisan backpack:base:user -N Superuser -E info@example.com --password='$2y$10$CHvmFEcxd4PZu6c53dp6GuvUF8InobD7KC/FUfyM7z7EtR9Nwxe8K' --encrypt=0",
            "@php artisan auth:is-admin info@example.com",
            "@mkdir public/uploads"
        ]
    }
}
